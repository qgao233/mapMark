.markers-container {
  height: 100vh;
  background: #f8f8f8;
}
.search-bar {
  padding: 44px 100px 12px 16px;
  background: #fff;
}
.search-bar .search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8px;
  padding: 8px 12px;
}
.search-bar .search-box .search-icon {
  width: 16px;
  height: 16px;
  margin-right: 8px;
}
.search-bar .search-box .search-input {
  flex: 1;
  font-size: 14px;
}
.filter-bar {
  display: flex;
  padding: 12px 16px;
  background: #fff;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
}
.filter-bar .left-section {
  display: flex;
  align-items: center;
  gap: 12px;
}
.filter-bar .left-section .sort-btn {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #333;
}
.filter-bar .left-section .sort-btn .icon {
  margin-left: 4px;
  font-size: 12px;
  transition: transform 0.3s;
}
.filter-bar .left-section .sort-btn .icon.icon-reverse {
  transform: rotate(180deg);
}
.filter-bar .left-section .total-count {
  font-size: 13px;
  color: #999;
}
.filter-bar .manage-btn {
  color: #007AFF;
  font-size: 14px;
  padding: 6px 12px;
}
.markers-list {
  height: calc(100vh - 110px);
  padding: 8px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.markers-list .marker-wrapper {
  margin-bottom: 12px;
  position: relative;
  border-radius: 12px;
  width: 92%;
  max-width: 680px;
  background: #ff3b30;
}
.markers-list .marker-wrapper .marker-item {
  display: flex;
  background: #fff;
  border-radius: 11px;
  transition: transform 0.2s ease;
  position: relative;
  z-index: 2;
}
.markers-list .marker-wrapper .marker-item .item-left {
  display: flex;
  align-items: center;
  padding: 16px 0 16px 16px;
}
.markers-list .marker-wrapper .marker-item .item-left .checkbox {
  width: 20px;
  height: 20px;
  border: 1.5px solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8px;
}
.markers-list .marker-wrapper .marker-item .item-left .checkbox .checkbox-inner {
  color: #fff;
  font-size: 12px;
  opacity: 0;
}
.markers-list .marker-wrapper .marker-item .item-left .checkbox .checkbox-inner.checked {
  opacity: 1;
  background-color: #007AFF;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.markers-list .marker-wrapper .marker-item .item-left .marker-index {
  font-size: 14px;
  color: #999;
  width: 24px;
  text-align: center;
}
.markers-list .marker-wrapper .marker-item .marker-content {
  flex: 1;
  padding: 16px 16px 16px 8px;
}
.markers-list .marker-wrapper .marker-item .marker-content .marker-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 6px;
}
.markers-list .marker-wrapper .marker-item .marker-content .marker-desc {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.markers-list .marker-wrapper .marker-item .marker-content .marker-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.markers-list .marker-wrapper .marker-item .marker-content .marker-meta .marker-time {
  font-size: 12px;
  color: #999;
}
.markers-list .marker-wrapper .marker-item .marker-content .marker-meta .marker-tags {
  display: flex;
  gap: 6px;
}
.markers-list .marker-wrapper .marker-item .marker-content .marker-meta .marker-tags .tag {
  background: #f5f5f5;
  color: #666;
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 12px;
}
.markers-list .marker-wrapper .delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 80px;
  height: 100%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  z-index: 1;
}
.batch-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 8px 16px;
  background: #fff;
  border-top: 1px solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.batch-action-bar .select-all {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
  color: #333;
}
.batch-action-bar .select-all .checkbox {
  width: 20px;
  height: 20px;
  border: 1.5px solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.batch-action-bar .select-all .checkbox .checkbox-inner {
  color: #fff;
  font-size: 12px;
  opacity: 0;
}
.batch-action-bar .select-all .checkbox .checkbox-inner.checked {
  opacity: 1;
  background-color: #007AFF;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.batch-action-bar .batch-delete {
  background-color: #ff3b30;
  color: #fff;
  padding: 8px 20px;
  border-radius: 20px;
  font-size: 14px;
}
.batch-action-bar .batch-delete.disabled {
  opacity: 0.5;
}
.empty-state {
  padding: 40px 0;
  text-align: center;
  color: #999;
  font-size: 14px;
}